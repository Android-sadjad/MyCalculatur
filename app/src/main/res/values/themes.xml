<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyCalculator" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#ED08070B</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#B9000000</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>






    <style name="defult_btn" parent="Theme.MyCalculator">
        <item name="android:height">100dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="backgroundTint">@color/btn_defult</item>
        <item name="android:background">@color/btn_defult</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">"onClicked"</item>
        <item name="android:textSize">25sp</item>


</style>


    <style name="gray_btn" parent="defult_btn">

        <item name="backgroundTint">#D7D7D7</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="orange_btn" parent="defult_btn">

        <item name="backgroundTint">#FF9600</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


<style name="ziro_btn" parent="defult_btn">
    <item name="android:layout_weight">8.3</item>
</style>


</resources>